{
  "name": "polkakit",
  "version": "0.0.3",
  "description": "Universal Polkadot/Substrate SDK & CLI",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "polkakit": "dist/cli/index.js"
  },
  "files": [
    "dist/**/*"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Aakash-Sriram/polkakit.git"
  },
  "homepage": "https://github.com/Aakash-Sriram/polkakit",
  "bugs": {
    "url": "https://github.com/Aakash-Sriram/polkakit/issues"
  },
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "tsup src/index.ts src/cli/index.ts --format esm,cjs --dts",
    "dev": "ts-node --project tsconfig.dev.json src/cli/index.ts",
    "cli": "ts-node src/cli/index.ts",
    "test:state": "ts-node src/test/state.ts",
    "test:metadata": "ts-node src/test/metadata.ts",
    "test:transaction": "ts-node src/test/transaction.ts"
  },
  "keywords": [
    "polkadot",
    "substrate",
    "blockchain",
    "sdk",
    "cli",
    "kusama",
    "parachain"
  ],
  "author": "Aakash Sriram",
  "license": "MIT",
  "dependencies": {
    "@polkadot/api": "^16.5.2",
    "@polkadot/api-contract": "^16.5.2",
    "@polkadot/keyring": "^13.5.8",
    "@polkadot/util": "^13.5.8",
    "@polkadot/util-crypto": "^13.5.8",
    "boxen": "^8.0.1",
    "chalk": "^5.6.2",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "figlet": "^1.9.3",
    "inquirer": "^12.11.0",
    "ora": "^8.2.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}